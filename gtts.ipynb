   "source": [
    "### Google Text to speech\n",
    "\n",
    "from gtts import gTTS\n",
    "import os\n",
    "\n",
    "def text_to_speech(text,language='en'):\n",
    "    tts = gTTS(text=text, lang=language, slow=False)\n",
    "    tts.save(\"output.mp3\")\n",
    "    os.system(\"start output.mp3\")\n",
    "input_text=input()\n",
    "lang=input()\n",
    "text_to_speech(input_text,lang)"
   ]
  }
